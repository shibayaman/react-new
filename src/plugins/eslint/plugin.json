{
  "devDependencies": ["eslint", "eslint-plugin-react"],
  "scripts": {
    "lint": "eslint ."
  },
  "config": {
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
